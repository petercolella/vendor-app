<div style="margin: 50px">
<h1>Stores</h1>

<div class="row">
  <div class="col s12 m7">
  <% @stores.each do |store| %>
    <div class="card hoverable">
      
      <div class="card-content">
        <p>Store: <%= store.store_name %></p>
        <p>Phone: <%= store.store_phone %></p>
        <p>Company ID: <%= store.company_id %></p>
      </div>
      <div class="card-action">
        <a href="<%= company_vendors_path %>">Vendors</a>
        <td><%= link_to 'Show', company_store_path(@company, store) %></td>
        <td><%= link_to 'Edit', edit_company_store_path(@company, store) %></td>
        <td><%= link_to 'Destroy', [@company, store], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </div>
    </div>
    <% end %>
  </div>
</div>

