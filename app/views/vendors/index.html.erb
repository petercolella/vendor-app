<div style="margin: 50px">
<div class="row">
  <div class="col s12">
    <% @vendors.each do |vendor| %>
    <div class="hoverable">
      <div class="card">
        <div class="card-image">
            <img src="<%= vendor.vendor_logo %>" style="max-height: 10em; width: auto; max-width: 100%; margin: auto; padding: 1em;">
        </div>
        <div class="center" style="margin-top: 1em;">
          <span class="card-title"><%= vendor.vendor_name %>: <%= vendor.vendor_contact_name %></span>
        </div>
        <div class="card-content center">
          <!-- <div> -->
          <!-- <div style="max-width: 100%;"> -->
            
            <p><a href="tel:<%= vendor.vendor_contact_phone %>"><i class="medium material-icons">contact_phone</i></a><span>   </span><a href="mailto:<%= vendor.vendor_contact_email %>"><i class="medium material-icons">contact_mail</i></a><span>   </span><a target="_blank" href="<%= vendor.vendor_website %>"><i class="medium material-icons">computer</i></a></p>
          <!-- </div> -->
          <!-- </div> -->
        </div>
        <div class="card-action">
          <%= link_to 'View Details', company_vendor_path(@company, vendor) %>
          <!-- <td><%= link_to 'Edit', edit_company_vendor_path(@company, vendor) %></td> -->
          <!-- <td><%= link_to 'Destroy', [@company, vendor], method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
        </div>
      </div>
      </div>
    <% end %>
  </div>
</div>

<a href="<%= companies_path %>" class="waves-effect waves-light btn"><i class="material-icons left">navigate_before</i>back</a>
<br>
<a href="<%= new_company_vendor_path %>" class="waves-effect waves-light btn"><i class="material-icons right">navigate_next</i>add a new vendor</a>
</div>