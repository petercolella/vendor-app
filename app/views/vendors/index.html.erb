<div style="margin: 50px">
<div class="row">
  <div class="col s12 m7">
  <% @vendors.each do |vendor| %>
    <div class="card hoverable">
      <div class="card-image">
          <img src="<%= vendor.vendor_logo %>" style="max-height: 150px; width: auto; max-width: 100%; margin: auto">
      </div>
      <div class="card-content">
        <span class="card-title"><%= vendor.vendor_name %></span>
      </div>
      <div class="card-content">
            <div class="valign-wrapper">
              <p><%= vendor.vendor_contact_name %></p>
              <span>  </span>
              <p><a href="tel:<%= vendor.vendor_contact_phone %>"><i class="medium material-icons">contact_phone</i></a></p>
              <span>  </span>
              <p><a href="mailto:<%= vendor.vendor_contact_email %>"><i class="medium material-icons">contact_mail</i></a></p>
              <span>  </span>
              <p><a target="_blank" href="<%= vendor.vendor_website %>"><i class="medium material-icons">computer</i></a></p>
            </div>
          </div>
      <div class="card-action">
        <td><%= link_to 'Show', company_vendor_path(@company, vendor) %></td>
        <td><%= link_to 'Edit', edit_company_vendor_path(@company, vendor) %></td>
        <td><%= link_to 'Destroy', [@company, vendor], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </div>
    </div>
    <% end %>
  </div>
</div>

<%= button_to 'New Vendor', new_company_vendor_path, :method => :get %>
<br>
<%= button_to 'Back', companies_path, :method => :get %>
</div>